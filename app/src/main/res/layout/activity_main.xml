<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="250dp"
            android:background="@drawable/ms"
            android:layout_height="167dp"
            android:id="@+id/songpic" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.061"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="0:11"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:id="@+id/elapsedtimer"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.538" app:layout_constraintEnd_toStartOf="@+id/remainingtime"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.054"/>
    <TextView
            android:text="4:11"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:id="@+id/remainingtime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.923" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.548"/>
    <ImageButton
            android:layout_width="61dp"
            android:background="@android:color/background_dark"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_media_previous"
            android:id="@+id/previous"
            android:onClick="prevsong"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.17" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.699"/>
    <ImageButton
            android:layout_width="63dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_media_next"
            android:id="@+id/forward"
            android:background="@android:color/background_dark"
            android:onClick="nextsong"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.811" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.699"/>
    <ImageButton
            android:layout_width="61dp"
            android:background="@android:color/holo_green_light"
            android:layout_height="45dp" app:srcCompat="@android:drawable/ic_lock_silent_mode"
            android:id="@+id/soundoff" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.837" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/soundon" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.083"/>
    <SeekBar
            android:layout_width="187dp"
            android:layout_height="24dp"
            android:background="@android:color/background_light"
            android:id="@+id/volmbar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/soundon" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintVertical_bias="0.829"
            app:layout_constraintStart_toStartOf="@+id/soundoff"/>
    <ImageButton
            android:layout_width="57dp"
            android:background="@android:color/holo_green_light"
            android:layout_height="40dp" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/soundon" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.84"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.958"/>
    <SeekBar
            android:layout_width="343dp"
            android:layout_height="19dp"
            android:background="@android:color/background_light"
            android:id="@+id/posbar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/songpic"
            android:layout_marginTop="228dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/play"
            app:layout_constraintVertical_bias="0.139" app:layout_constraintHorizontal_bias="0.365"/>
    <Button
            android:background="@drawable/ic_media_pause"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:onClick="playbtn"
            android:id="@+id/play"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/volmbar"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/previous"
            app:layout_constraintVertical_bias="0.652"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/forward" app:layout_constraintTop_toBottomOf="@+id/songpic"
            app:layout_constraintHorizontal_bias="0.512"/>
    <TextView
            android:text="song name"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="329dp"
            android:layout_height="30dp"
            android:id="@+id/songname" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/songpic" app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.534" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>