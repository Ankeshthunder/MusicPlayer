<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="409dp"
            android:layout_height="273dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/songpic" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
    />
    <TextView
            android:text="0:11"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="41dp"
            android:layout_height="23dp"
            android:id="@+id/elapsedtimer"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.75" app:layout_constraintEnd_toStartOf="@+id/remainingtime"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.01"/>
    <TextView
            android:text="4:11"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="41dp"
            android:layout_height="23dp"
            android:gravity="center"
            android:id="@+id/remainingtime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.98" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.75"
            android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="61dp"
            android:background="@android:color/background_dark"
            android:layout_height="55dp"
            app:srcCompat="@android:drawable/ic_media_previous"
            android:id="@+id/previous"
            android:onClick="prevsong"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.086" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.958"/>
    <ImageButton
            android:layout_width="63dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_media_next"
            android:id="@+id/forward"
            android:background="@android:color/background_dark"
            android:onClick="nextsong"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.876" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.956"/>
    <SeekBar
            android:layout_width="375dp"
            android:layout_height="12dp"
            android:background="@android:color/background_light"
            android:id="@+id/posbar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/songpic"
            android:layout_marginTop="228dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/play"
            app:layout_constraintVertical_bias="0.69" app:layout_constraintHorizontal_bias="0.365"/>
    <Button
            android:background="@drawable/ic_media_pause"
            android:backgroundTint="@color/black"
            android:layout_width="71dp"
            android:layout_height="80dp"
            android:onClick="playbtn"
            android:id="@+id/play"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/previous"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/forward" app:layout_constraintTop_toBottomOf="@+id/songpic"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.829"/>
    <TextView
            android:text="song name"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="329dp"
            android:layout_height="30dp"
            android:gravity="start"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/songname" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/songpic" app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.616"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="186dp"
            android:layout_height="23dp"
            android:gravity="start"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/artname" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.666"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="@+id/play"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>